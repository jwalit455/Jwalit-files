<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/joinedRacersLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/joinedRacersStr"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ListView
        android:id="@+id/racersJoinedList"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_weight="1" >
        <!-- Preview: listitem=@android:layout/simple_list_item_1 -->
    </ListView>

    <Button
        android:id="@+id/startRaceBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/startRaceBtnStr" />

</LinearLayout>